@import './var/svg.styl'
@import './var/default.styl'

top = -1.5em
color = #F2F2F2

dialog.uBox
  border 0.5em solid color
  max-width 390px
  min-width 310px
  outline none
  overflow visible
  padding 0
  position relative
  top: top - 0.5em

  &::backdrop
    background rgba(0, 0, 0, 0.6)

  &>div
    box-sizing border-box
    overflow auto

    &>h1
      text-align center

  &:before
    border 1px solid #ccc
    box-shadow 0 0 0.25em #eee
    content ''
    height 100%
    left 0
    pointer-events none
    position absolute
    top 0
    width 100%
    z-index 1

  &>a.x
    background svg-x 0 0 / cover no-repeat
    border 2px solid transparent
    border-radius 50%
    bottom: top * 2
    cursor pointer
    display flex
    filter invert(100%)
    height 1.5em
    left 50%
    margin-left -1em
    position absolute
    width 1.5em
    z-index 2

    &:hover
      background-image svg-x-h
      border-color #000
      font-weight bold
